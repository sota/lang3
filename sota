#!/bin/bash
spaces=" |'"
program="bin/sota"
commandline=()
for arg in "$@"; do
    case $arg in
        --pdb)
        program="python -m pdb src/target.py"
        ;;
        --py)
        program="python src/target.py"
        ;;
        *)
        if [[ $arg =~ $spaces ]]; then
            arg="'$arg'"
        fi
        commandline+=("${arg}")
        ;;
    esac
done

eval LD_LIBRARY_PATH="lib:$LD_LIBRARY_PATH" ${program} "${commandline[@]}"
exit $?
